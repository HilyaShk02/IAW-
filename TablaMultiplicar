<body>

<div class="card">
    <h1>Tabla de Multiplicar</h1>

    <!-- Formulario -->
    <form method="POST">
        <input type="number" name="numero" placeholder="Introduce un número" required><br>
        <input type="submit" value="Mostrar tabla">
    </form>

    <!-- PHP -->
    <?php
    if(isset($_POST['numero'])){
        $num = intval($_POST['numero']);
        echo "<div class='result'><strong>Tabla de multiplicar del $num:</strong><br>";
        for($i = 1; $i <= 10; $i++){
            $resultado = $num * $i;
            echo "$num × $i = $resultado<br>";
        }
        echo "</div>";
    }
    ?>
</div>

