<body>

<div class="card">
    <h1>Cuenta hasta N</h1>

    <!-- Formulario -->
    <form method="POST">
        <select name="tipo" required>
            <option value="">Selecciona tipo de cuenta</option>
            <option value="ascendente">Ascendente</option>
            <option value="descendente">Descendente</option>
        </select><br>
        <input type="number" name="numero" placeholder="NÃºmero N" required><br>
        <input type="submit" value="Contar">
    </form>

    <!-- PHP -->
    <?php
    if(isset($_POST['tipo'], $_POST['numero'])){
        $tipo = $_POST['tipo'];
        $n = intval($_POST['numero']);
        $cuenta = [];

        if($tipo === "ascendente"){
            for($i = 1; $i <= $n; $i++){
                $cuenta[] = $i;
            }
        } elseif($tipo === "descendente"){
            for($i = $n; $i >= 1; $i--){
                $cuenta[] = $i;
            }
        }

        echo "<p class='result'>Cuenta $tipo: " . implode(", ", $cuenta) . "</p>";
    }
    ?>
</div>

